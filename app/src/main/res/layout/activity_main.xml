<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/celsius_text"
        android:layout_width="158dp"
        android:layout_height="58dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="36dp"
        android:text="Celsius"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/celsius_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846" />

    <TextView
        android:id="@+id/fahr_text"
        android:layout_width="158dp"
        android:layout_height="58dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="40dp"
        android:text="Fahrenheit"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fahr_seekBar"
        app:layout_constraintEnd_toStartOf="@+id/celsius_val"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celsius_seekbar"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fahr_val"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="60dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fahr_seekBar"
        app:layout_constraintVertical_bias="0.057" />

    <SeekBar
        android:id="@+id/fahr_seekBar"
        android:layout_width="291dp"
        android:layout_height="61dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="452dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celsius_val"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/fahr_seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celsius_seekbar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="283dp"
        android:layout_height="65dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="112dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fahr_seekBar"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/celsius_seekbar"
        android:layout_width="291dp"
        android:layout_height="61dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintBottom_toTopOf="@+id/fahr_seekBar"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>